@model eLibrary_project.Models.EBook

@{
    ViewBag.Title = "Book Details";
}
<br>
<h4 style="text-align: center;">@Model.Name</h4>
<div style="margin: 0 auto;">
    @if (Model.CoverImg != "-")
    {
        <img src="@Model.CoverImg" alt="@Model.Name" style="max-height: 300px; display: block; margin-left: auto; margin-right: auto;">
    }
    <hr />

    <h3>@Html.DisplayNameFor(model => model.Author)</h3>

    <h4>@Html.DisplayFor(model => model.Author)</h4>

    <h3>
        @Html.DisplayNameFor(model => model.Genre)
    </h3>

    <h4>@Html.DisplayFor(model => model.Genre)</h4>

    <h3>
        @Html.DisplayNameFor(model => model.ReleaseYear)
    </h3>

    <h4>@Html.DisplayFor(model => model.ReleaseYear)</h4>

</div>
<p>
    @Html.ActionLink("Back to List", "EBooks")
</p>
