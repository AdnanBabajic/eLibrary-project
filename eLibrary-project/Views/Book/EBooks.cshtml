@model IEnumerable<eLibrary_project.Models.EBook>

@{
    ViewBag.Title = "EBooks";
}

<h2>EBooks</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseYear)
        </th>
        <th></th>
        <th></th>
    </tr>
@if (Model != null) {
foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Author)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Genre)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ReleaseYear)
    </td>
        <td>@Html.ActionLink("Details", "DetailsEBook", new { id = item.Id })</td>
    @if (User.IsInRole("admin"))
    {
        <td>
            @Html.ActionLink("Edit", "EditEBook", new { item.Id, item.PdfLink, item.Name, item.Author, item.Genre, item.ReleaseYear, item.CoverImg }) |
            @Html.ActionLink("Delete", "DeleteEBook", new { id = item.Id })
        </td>
    }
    else
    {
<td>
    <a href="@item.PdfLink">Open</a>
</td>
    }
</tr>
} }

</table>
